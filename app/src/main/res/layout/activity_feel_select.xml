<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feel_title_date"
        android:text="0000년 00월 00일"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_margin="16dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feel_table">
        <TableRow
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feel_button_verygood"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:backgroundTint="#262aff"
                android:src="@drawable/ic_star_5"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feel_button_good"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:backgroundTint="#26deff"
                android:src="@drawable/ic_star_4"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feel_button_normal"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:backgroundTint="#50d43c"
                android:src="@drawable/ic_star_3"/>
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우 좋음"
                android:gravity="center"
                android:textColor="@color/defaultText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋음"
                android:gravity="center"
                android:textColor="@color/defaultText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:gravity="center"
                android:textColor="@color/defaultText"/>
        </TableRow>

        <TableRow
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feel_button_bad"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:backgroundTint="#e226ff"
                android:src="@drawable/ic_star_2"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feel_button_verybad"
                android:layout_margin="8dp"
                app:fabSize="normal"
                app:backgroundTint="#ff262d"
                android:src="@drawable/ic_star_1"/>
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나쁨"
                android:gravity="center"
                android:textColor="@color/defaultText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우 나쁨"
                android:gravity="center"
                android:textColor="@color/defaultText"/>
        </TableRow>
    </TableLayout>
</LinearLayout>